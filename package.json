{
  "name": "pascola-website",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "stylelint": "npx stylelint \"src/**/*.scss\"",
    "prepare": "husky",
    "check": "tsc --noEmit",
    "prebuild": "npm run check",
    "postbuild": "next-sitemap"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "**/*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@vercel/analytics": "^1.5.0",
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-sitemap": "^4.2.3",
    "notistack": "^3.0.2",
    "postcss": "^8.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sass": "^1.93.2",
    "tailwindcss": "^4.1.14",
    "typescript": "5.9.3",
    "uninstall": "^0.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "daisyui": "^5.3.7",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "schema-dts": "^1.1.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0"
  },
  "browserslist": "> 1%"
}
